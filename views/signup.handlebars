<form class="signup-form">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <label for="name"><b>Username</b></label>
    <input id="signupUsername" type="text" placeholder="Enter Username" required>

    <label for="password"><b>Password (min. 8 characters)</b></label>
    <input  id="signupPassword" type="text" min="8" placeholder="Enter Password" required>

    <div class="clearfix">
      <button class="btn btn-dark" type="submit" id="signupBtn">Sign Up</button>
    </div>
  </div>
</form>

<script src="/js/signup.js"></script>
