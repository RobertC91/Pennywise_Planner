
<h2 style="margin-left: 20px; margin-top: 10px;">Good Afternoon</h2>

<section id="createNewExpense" class="card text-center" style="margin: 20px; background-color: #d4d5ca">
    <div class="card-body">
        <h3 class="card-title">Add an Expense</h3>
        <form id="newExpense" style="border-style: none;">
            <div class="card-text">
                <label for="Description">Description</label><br>
                <input type="text" id="description" placeholder="Description">
            </div>
            <div class="card-text">
                <label for="Amount">Amount</label><br>
                <input type="text" id="amount" step="0.01" placeholder="Amount">
            </div>
            <button class="btn btn-dark" type='submit' id="createExpense">Add Expense</button>
        </form>
    </div>
</section>

{{#if expenses.length}}
<section class="expense-list"></ul>
<h3 id="total-expenses" style="margin-left: 20px;">Here are your current expenses</h3>
{{#each expenses as |expense|}}
<div href="/api/expenses/{{expense.id}}" class="card" style=" margin-left: 20px; width: 50%; align-items: center; background-color: #d4d5ca">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h5 class="card-title text-center">Expense: {{expense.description}}</h5>
        <p class="card-text text-center">Amount: {{expense.amount}}</p>

        <button class="btn btn-outline-danger btn-sm" class="delete-button" data-id="{{expense.id}}">DELETE
        </button>
    </div>
</div>
{{/each}}
</section>
{{/if}}

<script src="/js/dashboard.js"></script>
<script src="/js/delete.js"></script>
